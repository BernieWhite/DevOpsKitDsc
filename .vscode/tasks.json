{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": ".\\scripts\\build.ps1 -Module DevOpsKitDsc -Clean -Verbose",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "test",
            "type": "shell",
            "command": ".\\scripts\\test.ps1 -Clean",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": [
                "$pester"
            ]
        },
        {
            "label": "coverage",
            "type": "shell",
            "command": ".\\scripts\\test.ps1 -Clean -CodeCoverage",
            "problemMatcher": [
                "$pester"
            ]
        },
        {
            "label": "build-docs",
            "type": "shell",
            "command": "New-ExternalHelp -OutputPath .\\build\\docs -Path .\\docs\\commands\\en-US -Force",
            "problemMatcher": []
        },
        {
            "label": "scaffold-docs",
            "type": "shell",
            "command": ".\\scripts\\build-docs.ps1 -Scaffold",
            "problemMatcher": []
        }
    ]
}